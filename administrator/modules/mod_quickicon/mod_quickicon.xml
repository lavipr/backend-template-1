<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="administrator" method="upgrade">
	<name>mod_quickicon</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>Copyright (C) 2005 - 2019 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>MOD_QUICKICON_XML_DESCRIPTION</description>
	<namespace>Joomla\Module\Quickicon</namespace>
	<files>
		<filename module="mod_quickicon">mod_quickicon.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_quickicon.ini</language>
		<language tag="en-GB">en-GB.mod_quickicon.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ADMIN_QUICKICON" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="icon_type"
					type="list"
					label="MOD_QUICKICON_TYPE"
				>
					<option value="">MOD_QUICKICON_SELECT_TYPE</option>
					<option value="update">MOD_QUICKICON_UPDATE</option>
					<option value="system">MOD_QUICKICON_SYSTEM</option>
					<option value="site">MOD_QUICKICON_SITE</option>
				</field>
				<field
					name="context"
					showon="icon_type:update"
					type="text"
					label="MOD_QUICKICON_GROUP_LABEL"
					description="MOD_QUICKICON_GROUP_DESC"
					default="mod_quickicon"
				/>
				<field
					name="show_global"
					showon="icon_type:system"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_GLOBAL_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_checkin"
					showon="icon_type:system"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_CHECKIN_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_cache"
					showon="icon_type:system"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_CACHE_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_users"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_USERS_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_articles"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_ARTICLES_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_categories"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_CATEGORIES_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_media"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_MEDIA_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_menuItems"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_MENUITEMS_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_modules"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_MODULES_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_plugins"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_PLUGINS_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="show_templates"
					showon="icon_type:site"
					type="radio"
					class="switcher"
					label="MOD_QUICKICON_SHOW_TEMPLATES_LABEL"
					default="1"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="custom-select"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
